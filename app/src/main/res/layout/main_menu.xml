<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id = "@+id/main_menu">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#272727">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#272727"
            android:gravity="center"
            android:text="CONNECT FOUR"
            android:textColor="#1D3BFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/oneplayer"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/oneplayer"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="ONE PLAYER"
            android:textColor="#4DB0FF"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

        </Button>

        <Button
            android:id="@+id/twoplayers"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:text="TWO PLAYERS"
            android:textColor="#4DB0FF"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="0dp">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
